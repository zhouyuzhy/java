<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis">
	<insert id="TestDO.insert" parameterType="TestDO">
	<![CDATA[
		INSERT INTO test(name) values(#{name})
	]]>
	</insert>

	<select id="TestDO.select" resultType="TestDO">
	<![CDATA[
		SELECT id,name
		FROM test
	]]>
		<where>
			<if test="id != null">
			<![CDATA[
				id = #{id}
				]]>
			</if>
			<if test="name != null">
			<![CDATA[
				AND name = #{name}
					]]>
			</if>
		</where>
	</select>
	
	<delete id="TestDO.clear">
	<![CDATA[ 
		DELETE FROM test
	 ]]>
	</delete>
	
</mapper>