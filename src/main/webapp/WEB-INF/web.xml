<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- servlet test -->
	<servlet>
		<servlet-name>TestServlet</servlet-name>
		<servlet-class>com.web.foo.servlet.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestServlet</servlet-name>
		<url-pattern>/test.action</url-pattern>
	</servlet-mapping>

	<!-- listener test -->
	<listener>
		<listener-class>com.web.foo.listener.TestListener</listener-class>
	</listener>

	<!-- spring test -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring-config.xml,classpath:beans/*.xml</param-value>
	</context-param>
</web-app>
